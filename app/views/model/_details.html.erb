<table>
	<tbody>
		<tr>
			<%= content_tag( 'th', 'Scale:' ) %>
			<%= content_tag( 'td', details.scale_name ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Manufacturer:' ) %>
			<%= content_tag( 'td', link_to( details.manufacturer_name, manufacturer_show_url( :manufacturer => details.manufacturer_id ) ) ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Class:' ) %>
			<%= content_tag( 'td', details.locomotive_class_name ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Operator:' ) %>
			<%= content_tag( 'td', details.operator_name ) %>
		</tr>
		<tr>
			<%= content_tag( 'th', 'Livery:' ) %>
			<%= content_tag( 'td', details.livery_name ) %>
		</tr>
	</tbody>
</table>